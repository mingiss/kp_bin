touch /home/kp/bin/synchro.running

while test -a /home/kp/bin/synchro.running; do

cp /home/kp/source.buf/xml/* /home/kp/source/tev/xml
rm /home/kp/source.buf/xml/*

cp /home/kp/source.buf/vlz/* /home/kp/source/tev/vlz
rm /home/kp/source.buf/vlz/*

cp /home/kp/source.buf/lzd/* /home/kp/source/tev/lzd
rm /home/kp/source.buf/lzd/*

cp /home/kp/source.buf/kpt/* /home/kp/source/kpt
rm /home/kp/source.buf/kpt/*

sleep 5

done
